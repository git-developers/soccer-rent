{% block content %}

    <section class="content-header">
        <h1>
            <i class="fa fa-fw fa-money"></i> Apostar
            <small>panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <form name="" method="post" class="">
    <section class="content">

        <div class="row">

            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border "> {# #}
                        <h3 class="box-title">lista de encuentros</h3>
                    </div>
                    <div class="box-body">

                        <div class="row ith-border">
                            <div class="col-md-3">

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Cash a apostar</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">$</span>
                                        <input type="number" class="form-control">
                                        <span class="input-group-addon">.00</span>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="column">

                            {% for key, match in matches %}
                                <div class="columns">
                                    <div class="column is-5">
                                        <div class="field">
                                            <p class="control has-icons-left has-icons-right">
                                                <input class="input" type="number" placeholder="{{ match.home.name }}" min="0" name="{{ key }}[]">
                                                <span class="icon is-small is-left">
                                              <img src="{{ match.home.flag }}" width="20px" style="display:inline-block">
                                            </span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="column is-2 has-text-centered">vs</div>
                                    <div class="column is-5">
                                        <div class="field">
                                            <p class="control has-icons-left has-icons-right">
                                                <input class="input" type="number" placeholder="{{ match.away.name }}" min="0" name="{{ key }}[]">
                                                <span class="icon is-small is-left">
                                              <img src="{{ match.away.flag }}" width="20px" style="display:inline-block">
                                            </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Enviar apuesta</button>
                    </div>
                </div>
            </div>

        </div>

    </section>
    </form>

{% endblock %}