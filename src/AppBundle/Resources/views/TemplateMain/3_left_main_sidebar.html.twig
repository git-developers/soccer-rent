{#Left side column. contains the logo and sidebar#}
<aside class="main-sidebar">

    {#sidebar: style can be found in sidebar.less#}
    <section class="sidebar">

        {#Sidebar user panel#}
        {% if app.user is not null %}
            <div class="user-panel">
                <div class="pull-left image">
                    <img
                        src="{{ asset('bundles/app/main-assets/dist/img/user2-160x160.jpg')}}"
                        {#src="{{ image_avatar }}"#}
                        class="img-circle x-hand"
                        alt="{{ app.user.name }} {{ app.user.lastName }}"
                        >
                    {#onclick="location.href='{{ path('frontend_profile_index', {slug:app.user.slug}) }}';"#}
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.name ~ ' ' ~ app.user.lastName }}</p>
                    <a href="#">
                        <i class="fa fa-circle text-success"></i> Online
                    </a>
                </div>
            </div>
        {% endif %}

        {#search form#}
        <form id="search-box-sidebar" action="#" method="get" class="sidebar-form" >
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Buscar...">
                <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                    <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
        </form>

        {#{{ path('backend_googledrive_index', {id:'my-drive'}) }}#}
        {#sidebar menu: : style can be found in sidebar.less#}
        <ul class="sidebar-menu">
            {#<li class="header">MENU</li>#}

            {% if is_granted('ROLE_ADMIN', 'app_role') %}
