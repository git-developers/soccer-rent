{% block content %}

    <section class="content-header">
        <h1>
            <i class="fa fa-fw fa-globe"></i> Detalles de la cancha
            <small>panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <section class="col-md-12 connectedSortable ui-sortable">
                <div class="box box-primary">

                    {#<div class="box-header with-border">#}
                        {#<h3 class="box-title">Datos</h3>#}
                    {#</div>#}

                    <div class="row">
                        <div class="col-md-6">

                            <div class="box-body">

                                <div class="info-box bg-green">
                                    <span class="info-box-icon">
                                        <i class="fa fa-cubes"></i>
                                    </span>

                                    <div class="info-box-content">
                                        {#<span class="info-box-text">{{ pdv.name }}</span>#}
                                        <span class="info-box-number">{{ pdv.name }}</span>

                                        <div class="progress">
                                            <div class="progress-bar" style="width: 70%"></div>
                                        </div>
                                        <span class="progress-description">
                                        {{ pdv.latitude }} : {{ pdv.longitude }}
                                    </span>
                                    </div>
                                </div>

                                <table class="table table-striped">
                                    <tbody>
                                        <tr>
                                            <th>name</th>
                                            <td>{{ pdv.name }}</td>
                                        </tr>
                                        <tr>
                                            <th>Dirección</th>
                                            <td>{{ pdv.description }}</td>
                                        </tr>
                                        <tr>
                                            <th>Telefono</th>
                                            <td>
                                                <i class="fa fa-fw fa-phone"></i> {{ pdv.telephone }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Precio por hora</th>
                                            <td>
                                                <i class="fa fa-fw fa-money"></i> {{ pdv.precio_por_hora }}
                                            </td>
                                        </tr>
                                        {#<tr>#}
                                            {#<th>Código</th>#}
                                            {#<td>{{ pdv.code }}</td>#}
                                        {#</tr>#}
                                        {#<tr>#}
                                            {#<th>Latitude</th>#}
                                            {#<td>#}
                                                {#<i class="fa fa-fw fa-map-marker"></i> {{ pdv.latitude }}#}
                                            {#</td>#}
                                        {#</tr>#}
                                        {#<tr>#}
                                            {#<th>Longitude</th>#}
                                            {#<td>#}
                                                {#<i class="fa fa-fw fa-map-marker"></i> {{ pdv.longitude }}#}
                                            {#</td>#}
                                        {#</tr>#}
                                        <tr>
                                            <th>Creado</th>
                                            <td>
                                                <span class="label label-success">
                                                    {{ pdv.created_at }}
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Icono</th>
                                            <td>
                                                <img src="{{ pdv.image }}" alt="" class="img-thumbnail">
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <p>&nbsp</p>

                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <a href="{{ path('app_reserva_create', {pdvId:pdv.id_increment}) }}" class="btn btn-block btn-primary">
                                            <i class="fa fa-fw fa-calendar-check-o"></i> Crear Reserva
                                        </a>
                                    </div>
                                </div>


                            </div>

                            <div class="box-footer">

                            </div>

                        </div>
                    </div>

                </div>
            </section>
