{% spaceless %}
    <div class="box box-solid">
        {#<div class="box-header with-border">#}
            {#<h3 class="box-title">About Me</h3>#}
        {#</div>#}

        <div class="box-body">

            <div class="row">
                <div class="col-md-6">
                    <strong>
                        <i class="fa fa-book margin-r-5"></i> Nombre
                    </strong>

                    <p class="text-muted">
                        {{ entity.name }}
                    </p>
                </div>
                <div class="col-md-6">
                    <strong>
                        <i class="fa fa-map-marker margin-r-5"></i> Slug
                    </strong>

                    <p class="text-muted">
                        {{ entity.slug }}
                    </p>
                </div>
            </div>

            <hr>

            <strong>
                <i class="fa fa-fw fa-expeditedssl margin-r-5"></i> Roles del perfil
            </strong>

            <div style="max-height: 200px; overflow: auto">
                <table class="table table-bordered">
                    <tbody>
                    {% for key, role in entity.role %}
                        <tr>
                            <td>
                                <span class="badge bg-blue">{{ role.idIncrement }}</span>
                            </td>
                            <td>{{ role.groupRol ~ ' - ' ~ role.name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <hr>

            <strong>
                <i class="fa fa-pencil margin-r-5"></i> Skills
            </strong>

            <p>
                <span class="label label-danger">UI Design</span>
                <span class="label label-success">Coding</span>
                <span class="label label-info">Javascript</span>
                <span class="label label-warning">PHP</span>
                <span class="label label-primary">Node.js</span>
            </p>

            <hr>

            <strong>
                <i class="fa fa-file-text-o margin-r-5"></i> Notes
            </strong>

            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>

        </div>
    </div>
{% endspaceless %}